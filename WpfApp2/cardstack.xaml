<UserControl x:Class="WpfApp2.cardstack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" 
             Height="250"
             MinWidth="300"
             Width="auto"
             x:Name="root"
            
             >
    <UserControl.Resources>
        <local:GreatherThanConverter x:Key="GreatherThanConverter"/>
    </UserControl.Resources>
    <StackPanel Background="red">


            <StackPanel >
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActualWidth, ElementName=root, Converter={StaticResource GreatherThanConverter}, ConverterParameter=600 }" Value="True">
                                <Setter Property="Orientation" Value="Horizontal"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
            
                <local:card AuthorNickName="ajsksadjklasdl" TrackName="the gowno" SourceOfImage="IMG_7173.PNG" Width="auto"/>
                <local:card AuthorNickName="ajsksadjklasdl" TrackName="the gowno" SourceOfImage="IMG_7173.PNG" Width="auto"/>
                <local:card AuthorNickName="ajsksadjklasdl" TrackName="the gowno" SourceOfImage="IMG_7173.PNG" Width="auto"/>
            </StackPanel>

            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActualWidth, ElementName=root, Converter={StaticResource GreatherThanConverter}, ConverterParameter=600 }" Value="True">
                                <Setter Property="Orientation" Value="Horizontal"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <local:card AuthorNickName="ajsksadjklasdl" TrackName="the gowno" SourceOfImage="IMG_7173.PNG" Width="auto"/>
                <local:card AuthorNickName="ajsksadjklasdl" TrackName="the gowno" SourceOfImage="IMG_7173.PNG" Width="auto"/>
                <local:card AuthorNickName="ajsksadjklasdl" TrackName="the gowno" SourceOfImage="IMG_7173.PNG" Width="auto"/>
            </StackPanel>
      




    </StackPanel>
</UserControl>
